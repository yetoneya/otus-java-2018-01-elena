<GridPane fx:id="startPane" prefHeight="500" prefWidth="600" alignment="CENTER" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.otus.elena.bancomat.view.FXMLStartLayoutController">
 
    <Button fx:id="payInButton" prefHeight="50.0" prefWidth="500.0" text="Внести" onAction="#handlePayInButton" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <Button fx:id="withdrawMoneyButton" minHeight="50.0" minWidth="500.0" text="Снять" onAction="#handleWithdrawMoneyButton" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Button fx:id="showButton" minHeight="50.0" prefWidth="500.0"  text="Показать баланс" onAction="#handleShowBalanceButton" GridPane.columnIndex="0" GridPane.rowIndex="2"/>    
</GridPane>
